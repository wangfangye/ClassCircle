<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_register"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="18dp"
            android:src="@drawable/back_register" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="48dp"
            android:gravity="center"
            android:text="注  册"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="100"
        android:background="@color/graybackgtound" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:src="@drawable/icon"
            app:civ_border_color="#FFffffff"
            app:civ_border_width="2dp" />
    </LinearLayout>

    <LinearLayout
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <doctorw.classcircle.view.YEditText
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:paddingLeft="16dp"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:alpha="100"
        android:background="@color/green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <doctorw.classcircle.view.YEditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入用户名"
            android:paddingLeft="16dp"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:alpha="100"
        android:background="@color/green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <doctorw.classcircle.view.YEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请输入6-12位密码"
            android:paddingLeft="16dp"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:alpha="100"
        android:background="@color/green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <doctorw.classcircle.view.YEditText
            android:inputType="textPassword"
            android:id="@+id/et_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="确认密码"
            android:paddingLeft="16dp"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:alpha="100"
        android:background="@color/green" />

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
         android:gravity="center"
        android:orientation="horizontal">

        <doctorw.classcircle.view.YEditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:paddingLeft="16dp"
            android:textSize="16sp" />

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/bg_round_button_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_code"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/gray"
            />
        <!--<TextView-->
            <!--android:id="@+id/tv_code"-->
            <!--android:paddingTop="3dp"-->
            <!--android:paddingBottom="3dp"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:paddingRight="8dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="获取验证码"-->
            <!--android:gravity="center"-->
            <!--android:textColor="@color/gray"-->
            <!--android:textSize="10sp" />-->

    </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:alpha="100"
        android:background="@color/green" />




    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal" >

        <!--<ImageView-->
            <!--android:paddingLeft="10dp"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:src="@drawable/ic_tab_shequ_pressed"-->
            <!--/>-->

        <!--<TextView-->
            <!--android:gravity="center"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="20dp"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:text="注册表示您已经同意"-->
            <!--android:textColor="@color/black"-->
            <!--android:textSize="12sp" />-->

        <CheckBox
            android:id="@+id/cb_agree"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:text="注册表示您已经同意"
            android:textColor="@color/black"
            android:textSize="12sp"
            style="@style/CustomCheckBoxTheme"
            />

        <TextView
            android:id="@+id/tv_xieyi"
            android:paddingTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="14dp"
            android:gravity="center_vertical"
            android:text="用户注册协议"
            android:textColor="@color/green"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_round_button_green_solid"
        android:text="注    册"
        android:textColor="@color/white"
        android:textSize="22sp" />

</LinearLayout>